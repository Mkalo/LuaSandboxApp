<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uff.ic.luasandbox">

    <uses-permission
        android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OpenActivity"
            android:label="@string/opentoolbar_title" />
        <activity
            android:name=".OutputActivity"
            android:label="@string/outputtoolbar_title" />
        <activity
            android:name=".SaveActivity"
            android:label="@string/savetoolbar_title" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settingstoolbar_title" />
    </application>

</manifest>